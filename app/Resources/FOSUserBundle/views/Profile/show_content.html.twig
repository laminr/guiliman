{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col s6">
        <div class="fos_user_user_show">
            <p>
                {{ 'profile.show.username'|trans }}: {{ user.username }}
                <a href="{{ url('fos_user_profile_edit', {'id' : app.user.id }) }}" class="right">
                    <i class="material-icons">edit</i>
                </a>
            </p>
            <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
        </div>
    </div>
    <div class="col s6">
        <div>
            Qui suis-je: {{ app.user.person }}
            <a href="{{ url('user_person_edit', {'id' : app.user.id }) }}" class="right">
                <i class="material-icons">edit</i>
            </a>
        </div>
        <div>
            <div class="col s6">
                Actions:
            </div>
            <div class="col s6">
                <span class="figures">
                {{ app.user.person.action | number_format(0) }}
                </span>
            </div>
            <div class="col s6">
                Obligations:
            </div>
            <div class="col s6">
                <span class="figures">
                    {{ app.user.person.obligation | number_format(0) }}
                </span>
            </div>
        </div>
    </div>
</div>

<div>
    <a href="{{ path('homepage') }}" class="btn">Retour</a>
</div>
