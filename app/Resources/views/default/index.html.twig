{% extends 'base.html.twig' %}

{% block body %}
    {{ include('::header.html.twig') }}

    <div class="container">
        <h2>Sondage</h2>
        {% for question in questions %}
            <div class="row poll-item">
                <div class="col s5">
                    {{ question.label }}
                </div>
                <div class="col s5">
                    {% for answer in question.answers %}
                        <div class="poll-answer">
                            0%
                            <div>{{ answer }}</div>
                        </div>
                    {% endfor %}
                </div>
                <div class="col s2">
                    <a href="{{ path('poll_person_answer', { 'id' : question.id }) }}" class="btn btn-small right">
                        r√©pondre
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

