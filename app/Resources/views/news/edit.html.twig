{% extends 'base.html.twig' %}

{% block body %}

    <main class="container">
        <h1>News edit</h1>
        <div class="row">
            <div class="col s12 m8 offset-m2 l6 offset-l3">
                {{ form_start(edit_form) }}
                    <div class="row">
                        <div class="col s6">
                            {{ form_widget(edit_form.publication) }}
                        </div>
                        <div class="col s6">
                            <span class="switch">
                                {{ form_label(edit_form.published) }}
                                <label>
                                    {{ form_widget(edit_form.published) }}
                                    <span class="lever"></span>
                                </label>
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            {{ form_widget(edit_form) }}
                        </div>
                    </div>

                    <input type="submit" value="Submit" class="btn right"/>
                {{ form_end(edit_form) }}

                <a href="{{ path('admin_news_index') }}" class="btn left">Back to the list</a>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn left red">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </main>

{% endblock %}

{% block javascripts %}

    <script>
        $('.datepicker').pickadate({
            selectMonths: true, // Creates a dropdown to control month
            format: 'dd/mm/yyyy'
        });
    </script>
{% endblock %}