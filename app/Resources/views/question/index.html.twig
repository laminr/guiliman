{% extends 'base.html.twig' %}

{% block body %}
    <main class="container">
        <div class="row">
            <div class="col s12">
                <h1>Questions list</h1>
                <a href="{{ path('admin_default_index') }}" class="btn">< Back</a>
                <a href="{{ path('question_new') }}" class="btn right btn-floating btn-large">
                    <i class="large material-icons">add</i>
                </a>
                <table>
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Label</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for question in questions %}
                        <tr>
                            <td><a href="{{ path('question_show', { 'id': question.id }) }}">{{ question.id }}</a></td>
                            <td>{{ question.label }}</td>
                            <td>
                                <a href="{{ path('question_show', { 'id': question.id }) }}" class="btn">show</a>
                                <a href="{{ path('question_edit', { 'id': question.id }) }}" class="btn">edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </main>
{% endblock %}
