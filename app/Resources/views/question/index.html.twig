{% extends 'base.html.twig' %}

{% block body %}
    <main class="container">
        <div class="row">
            <div class="col s12">
                <h1>Questions list</h1>

                <table>
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Label</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for question in questions %}
                        <tr>
                            <td><a href="{{ path('question_show', { 'id': question.id }) }}">{{ question.id }}</a></td>
                            <td>{{ question.label }}</td>
                            <td>
                                <a href="{{ path('question_show', { 'id': question.id }) }}" class="btn">show</a>
                                <a href="{{ path('question_edit', { 'id': question.id }) }}" class="btn">edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('question_new') }}">Create a new question</a>
                    </li>
                </ul>
            </div>
        </div>
    </main>
{% endblock %}
