{% extends 'base.html.twig' %}

{% block body %}
    <main class="container">
        <div class="row">
            <div class="col s12">
                <h1>Question</h1>

                <table>
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ question.id }}</td>
                        <a class="btn right" href="{{ path('question_edit', { 'id': question.id }) }}">Edit</a>
                    </tr>
                    <tr>
                        <th>Label</th>
                        <td>{{ question.label }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('question_index') }}" class="btn left">Back to the list</a>
                <div class="right">
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn btn-red">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
